        <script>
        function logout() {
            // SweetAlert2 ile onay al
            Swal.fire({
                title: 'Çıkış Yapmak İstediğinizden Emin misiniz?',
                text: "Hesabınızdan güvenli bir şekilde çıkış yapacaksınız.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, Çıkış Yap',
                cancelButtonText: 'İptal',
                customClass: {
                    popup: 'swal2-popup-custom',
                    confirmButton: 'swal2-confirm-custom',
                    cancelButton: 'swal2-cancel-custom'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Loading göster
                    Swal.fire({
                        title: 'Çıkış yapılıyor...',
                        text: 'Lütfen bekleyiniz.',
                        icon: 'info',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        willOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    
                    // Logout işlemi
                    fetch('/logout', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-CSRF-Token': window.csrfToken || ''
                        },
                        credentials: 'same-origin'
                    })
                    .then(response => {
                        if (response.ok) {
                            // Başarılı çıkış
                            Swal.fire({
                                title: 'Başarılı!',
                                text: 'Güvenli bir şekilde çıkış yaptınız.',
                                icon: 'success',
                                confirmButtonText: 'Tamam',
                                customClass: {
                                    popup: 'swal2-popup-custom'
                                }
                            }).then(() => {
                                // Ana sayfaya yönlendir
                                window.location.href = '/login';
                            });
                        } else {
                            throw new Error('Çıkış işlemi başarısız');
                        }
                    })
                    .catch(error => {
                        console.error('Logout error:', error);
                        Swal.fire({
                            title: 'Hata!',
                            text: 'Çıkış işlemi sırasında bir hata oluştu.',
                            icon: 'error',
                            confirmButtonText: 'Tamam',
                            customClass: {
                                popup: 'swal2-popup-custom'
                            }
                        });
                    });
                }
            });
        }
        </script>

