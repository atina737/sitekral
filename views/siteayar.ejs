(function(){
  const CSRF = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || '<%= csrf %>';
  const q = function(s){ return document.querySelector(s); };

  function toast(msg, type){
    let box = document.getElementById('toastContainer');
    if (!box) {
      box = document.createElement('div');
      box.id = 'toastContainer';
      box.className = 'toast-container position-fixed top-0 end-0 p-3';
      box.style.zIndex = '1080';
      document.body.appendChild(box);
    }
    const id = 't'+Math.random().toString(36).slice(2);
    let cls = 'bg-danger text-white';
    if (type === 'success') cls = 'bg-success text-white';
    else if (type === 'info') cls = 'bg-info text-dark';
    else if (type === 'warning') cls = 'bg-warning text-dark';

    box.insertAdjacentHTML('beforeend',
      `<div id="${id}" class="toast align-items-center ${cls} border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
          <div class="toast-body">${msg || ''}</div>
          <button type="button" class="btn-close${cls.includes('text-white') ? ' btn-close-white' : ''} me-2 m-auto" data-bs-dismiss="toast" aria-label="Kapat"></button>
        </div>
      </div>`
    );
    const el = document.getElementById(id);
    const t = new bootstrap.Toast(el,{delay:2200});
    el.addEventListener('hidden.bs.toast', function(){ el.remove(); });
    t.show();
  }
  function setMsg(t){
    const el = q('#msg');
    if(el) el.textContent = t || '';
    if (t) toast(t, 'danger');
  }

  function setSavingState(saving){
    const btn = q('#btnSave');
    const spn = q('#btnSaveSpinner');
    if (!btn || !spn) return;
    if (saving){
      btn.setAttribute('disabled', 'disabled');
      spn.classList.remove('d-none');
    } else {
      btn.removeAttribute('disabled');
      spn.classList.add('d-none');
    }
  }

  function updateStatusBadge(val){
    const currentStatus = q('#currentStatus');
    if (!currentStatus) return;
    const on = String(val) === 'true';
    currentStatus.textContent = on ? 'Otomatik Onay Aktif' : 'Manuel Onay Gerekli';
    currentStatus.className = on ? 'text-success fw-semibold' : 'text-warning fw-semibold';
  }

  function load(){
    fetch('/api/admin/site', {credentials:'same-origin'})
      .then(function(r){ return r.json(); })
      .then(function(resp){
        if (!resp || !resp.ok) {
          setMsg((resp && resp.message) || 'Ayarlar yüklenemedi');
          return;
        }
        setMsg('');
        const d = resp.data || {};
    q('#siteName').value = d.siteName || '';
    q('#registerAutoApprove').value = String(!!d.registerAutoApprove);
    updateStatusBadge(String(!!d.registerAutoApprove));
    q('#defaultMembershipDays').value = (typeof d.defaultMembershipDays !== 'undefined' ? d.defaultMembershipDays : 30);
    q('#defaultQueryCredits').value = (typeof d.defaultQueryCredits !== 'undefined' ? d.defaultQueryCredits : 30);
    q('#dailyQueryCredits').value = (typeof d.dailyQueryCredits !== 'undefined' ? d.dailyQueryCredits : 10);
    
      })
      .catch(function(){ setMsg('Ayarlar yüklenemedi'); });
  }

  function put(url, data){
    return fetch(url, {
      method: 'PUT',
      headers: {'Content-Type': 'application/json','x-csrf-token': CSRF},
      credentials: 'same-origin',
      body: JSON.stringify(data || {})
    }).then(function(r){ return r.json(); });
  }
  q('#registerAutoApprove').addEventListener('change', function(e){
    updateStatusBadge(e.target.value);
  });

  q('#btnSave').addEventListener('click', function(){
    const nameEl = q('#siteName');
    const siteName = nameEl.value.trim();
    const registerAutoApprove = q('#registerAutoApprove').value === 'true';
    const daysEl = q('#defaultMembershipDays');
    const defaultMembershipDays = Number(daysEl.value);
    const creditsEl = q('#defaultQueryCredits');
    const defaultQueryCredits = Number(creditsEl.value);
    const dailyCreditsEl = q('#dailyQueryCredits');
    const dailyQueryCredits = Number(dailyCreditsEl.value);

    // Basit doğrulama
    const valid = siteName.length >= 2 && siteName.length <= 50;
    nameEl.classList.toggle('is-invalid', !valid);
    const validDays = Number.isFinite(defaultMembershipDays) && defaultMembershipDays >= 0 && defaultMembershipDays <= 3650;
    daysEl.classList.toggle('is-invalid', !validDays);
    const validCredits = Number.isFinite(defaultQueryCredits) && defaultQueryCredits >= 0 && defaultQueryCredits <= 1000;
    creditsEl.classList.toggle('is-invalid', !validCredits);
    const validDailyCredits = Number.isFinite(dailyQueryCredits) && dailyQueryCredits >= 1 && dailyQueryCredits <= 1000;
    dailyCreditsEl.classList.toggle('is-invalid', !validDailyCredits);
    if (!valid || !validDays || !validCredits || !validDailyCredits){
      toast('Lütfen tüm alanları doğru şekilde doldurun', 'warning');
      return;
    }

    setSavingState(true);
    put('/api/admin/site', { siteName, registerAutoApprove, defaultMembershipDays, defaultQueryCredits, dailyQueryCredits })
    .then(function(resp){
      if (!resp || !resp.ok) {
        setMsg((resp && resp.message) || 'Kaydedilemedi');
        return;
      }
      toast('Ayarlar kaydedildi', 'success');
      updateStatusBadge(String(registerAutoApprove));
      load();
    })
    .catch(function(){ setMsg('Kaydedilemedi'); })
    .finally(function(){ setSavingState(false); });
  });
  q('#btnReload').addEventListener('click', load);
  if (document.readyState === 'loading')
    document.addEventListener('DOMContentLoaded', load);
  else
    load();
})();

